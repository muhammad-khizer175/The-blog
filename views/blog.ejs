<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>Blog</title>
</head>
<body>
    <%- include("./partials/navbar") %>
       
    <section class="container mt-4 ">
      <div class="container d-flex flex-column align-items-center  justify-content-center">
        <h1><%= blog.blogTitle %></h1>
        <img class="mt-3" src="<%= blog.bannerImage %>" width="800px" alt="blog banner">
      </div>

      <hr class="mt-4">
   
      <div>
        <pre style="color:#0081C6"><%= blog.content %></pre>
      </div>

      <div class="d-flex" >
        <img src="<%= blog.createdBy.profileImageUrl %>" width="60px">
        <h5 class="m-3"><%= blog.createdBy.fullName  %></h5>
      </div>

      <div class="mt-4">
        <h3>Comments</h3>

        <form  action="/blog/comment/<%= blog._id %>" method="post">
          <input
          type="text"
          class="form-control"
          name="content"
        />
        <button class="btn btn-primary mt-2" type="submit">Post</button>
        </form>

        <div class="mt-4">

          <% comments.forEach(comment => { %>
            <div >
              <div class="d-flex">

                <img src="<%= comment.commentedBy.profileImageUrl %>" style="position: relative; top: 0.8rem;" width="50px">
                <p class="m-3"><b><%= comment.commentedBy.fullName %></b></p>
              </div>
              <p style="margin-left:4rem; position: relative; bottom: 1rem;"><%= comment.content %></p>
            </div>

          <% }) %>
          
        </div>

      </div>

    </section>

     

  
    <%- include("./partials/script") %>
    
</body>
</html>